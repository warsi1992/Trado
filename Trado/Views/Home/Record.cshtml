
@{
    ViewData["Title"] = "Record";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <table id="recordTable" class="table table-light">
        <thead>
            <tr><th>ID</th><th>Name</th><th>Gender</th><th>Hobbies</th></tr>
        </thead>
        <tbody id="tbody"></tbody>
    </table>
</div>

<script>
    $(document).ready(function(){
        
        getRecord();
    
    
    });

    function getRecord() {

        $.ajax({
            url: 'getRecord',
            type: 'Get',
            data: {},
            success: function (data) {
                data=JSON.parse(data);
                for(var i=0;i<data.length;i++)
                {
                    $("#tbody").append('<tr><td>'+data[i].id+'</td><td>'+data[i].name+'</td><td>'+data[i].gender+'</td><td>'+data[i].hobby+'</td></tr>');
                
                
                }
            },
            error: function (data) {
                console.log('Error');
            }




        });


    }
</script>